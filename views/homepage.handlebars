{{! homepage.handlebars holds "all posts" on the tech blog homepage}}
<div class="posts">
  {{#each posts}}
  <article class="card">
    <div class="card-header flex-row justify-space-between">
      <h2>
        <a href="/post/{{id}}">{{title}}</a>
      </h2>
      <p>
        Posted by {{User.username}} on {{created_at}}  
      </p>
    </div>
    <div class="card-body">
      {{body}}
    </div>
  </article>
  {{/each}}
</div>

